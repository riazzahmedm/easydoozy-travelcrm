generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id     String       @id @default(uuid())
  name   String
  slug   String       @unique
  logo   String?
  color  String?
  status TenantStatus @default(ACTIVE)

  users        User[]
  destinations Destination[]
  packages     Package[]
  tags         Tag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  media     Media[]
}

model User {
  id       String @id @default(uuid())
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  name     String
  email    String   @unique
  password String
  role     UserRole @default(AGENT)
  isActive Boolean  @default(true)

  resetTokenHash String?
  resetTokenExp  DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Destination {
  id       String @id @default(uuid())
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  country     String
  city        String
  name        String
  slug        String
  description String?
  status      ContentStatus @default(DRAFT)

  coverImageId String? @unique
  coverImage   Media?  @relation("DestinationCover", fields: [coverImageId], references: [id])

  media Media[] @relation("DestinationMedia")

  tags     Tag[]
  packages Package[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([tenantId, slug])
}

model Package {
  id            String      @id @default(uuid())
  tenantId      String
  tenant        Tenant      @relation(fields: [tenantId], references: [id])
  destinationId String
  destination   Destination @relation(fields: [destinationId], references: [id])

  name      String
  slug      String
  duration  String
  priceFrom Float
  overview  String?
  status    ContentStatus @default(DRAFT)

  highlights String[]
  inclusions String[]
  exclusions String[]

  coverImageId String? @unique
  coverImage   Media?  @relation("PackageCover", fields: [coverImageId], references: [id])

  media Media[] @relation("PackageMedia")

  itinerary ItineraryDay[]

  tags Tag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([tenantId, slug])
}

model Tag {
  id       String @id @default(uuid())
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  name String
  slug String

  destinations Destination[]
  packages     Package[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([tenantId, slug])
}

model ItineraryDay {
  id        String  @id @default(uuid())
  packageId String
  package   Package @relation(fields: [packageId], references: [id], onDelete: Cascade)

  dayNumber   Int
  title       String
  description String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([packageId, dayNumber])
}

model Media {
  id       String @id @default(uuid())
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  url     String
  altText String?
  type    MediaType @default(IMAGE)
  order   Int       @default(0)

  destinationCover Destination? @relation("DestinationCover")
  packageCover     Package?     @relation("PackageCover")

  destinationId String?
  destination   Destination? @relation("DestinationMedia", fields: [destinationId], references: [id], onDelete: Cascade)

  packageId String?
  package   Package? @relation("PackageMedia", fields: [packageId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId])
}

enum UserRole {
  SUPER_ADMIN
  TENANT_ADMIN
  AGENT
}

enum TenantStatus {
  ACTIVE
  SUSPENDED
}

enum ContentStatus {
  DRAFT
  PUBLISHED
}

enum MediaType {
  IMAGE
  VIDEO
}
